<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->
<labwc_config>
  <core>
    <gap>4</gap>
    <decoration>server</decoration>
    <windowSwitcher show="yes" preview="yes" outlines="no"/>
    <adaptiveSync>yes</adaptiveSync>
    <reuseOutputMode>yes</reuseOutputMode>
  </core>
  <focus>
    <followMouse>no</followMouse>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <resistance>
    <screenEdgeStrength>10</screenEdgeStrength>
  </resistance>
  <theme>
    <name>Lab-Oxygen</name>
    <icon>MacTahoe-light</icon>
    <cornerRadius>8</cornerRadius>
    <font name="Noto Sans" size="11"/>
    <keppBorder>yes</keppBorder>
    <dropShadows>yes</dropShadows>
    <dropShadowsOnTiled>yes</dropShadowsOnTiled>
    <titlebar>
      <layout>icon:iconify,max,close</layout>
    </titlebar>
    <menu>
      <background>
        <color>
          <alpha>200</alpha>
          <value>#c1e9f7</value>
        </color>
      </background>
    </menu>
  </theme>
  <windowSwitcher show="yes" preview="yes" outlines="no">
    <fields>
      <field content="desktop_entry_name" width="15%"/>
    </fields>
  </windowSwitcher>
  <placement>
    <policy>Center</policy>
  </placement>
  <desktops>
    <popupTime>1000</popupTime>
    <number>4</number>
    <prefix>Escritorio</prefix>
  </desktops>
  <regions>
    <region name="top-left" x="0%" y="0%" height="50%" width="50%"/>
    <region name="top" x="0%" y="0%" height="50%" width="100%"/>
    <region name="top-right" x="50%" y="0%" height="50%" width="50%"/>
    <region name="left" x="0%" y="0%" height="100%" width="50%"/>
    <region name="center" x="10%" y="10%" height="80%" width="80%"/>
    <region name="right" x="50%" y="0%" height="100%" width="50%"/>
    <region name="bottom-left" x="0%" y="50%" height="50%" width="50%"/>
    <region name="bottom" x="0%" y="50%" height="50%" width="100%"/>
    <region name="bottom-right" x="50%" y="50%" height="50%" width="50%"/>
  </regions>
  <keyboard>
    <default/>
    <!-- Use a different terminal emulator -->
    <keybind key="W-a">
      <action name="ShowMenu" menu="root-menu"/>
    </keybind>
    <keybind key="W-b">
      <action name="Execute" command="fsearch"/>
    </keybind>
    <keybind key="W-c">
      <action name="Execute" command="foot -T cmus cmus"/>
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="mousepad"/>
    </keybind>
    <keybind key="W-f">
      <action name="Execute" command="thunar"/>
    </keybind>
    <keybind key="W-m">
      <action name="Execute" command="audacious"/>
    </keybind>
    <keybind key="W-n">
      <action name="Execute" command="foot -T Ncmpcpp ncmpcpp"/>
    </keybind>
    <keybind key="W-p">
      <action name="Execute" command="wl-color-picker"/>
    </keybind>
    <keybind key="W-q">
      <action name="Execute" command="/usr/bin/wlogout"/>
    </keybind>
    <keybind key="W-r">
      <action name="Execute" command="rofi -show run -prompt Ejecutar -config ~/.config/rofi/themes/runbox/config.rasi -theme ~/.config/rofi/themes/runbox/runbox-dark.rasi "/>
    </keybind>
    <keybind key="W-s">
      <action name="PreviousWindow"/>
    </keybind>
    <keybind key="W-t">
      <action name="Execute" command="foot"/>
    </keybind>
    <keybind key="W-v">
      <action name="Execute" command="com.github.babluboy.bookworm"/>
    </keybind>
    <keybind key="W-w">
      <action name="Execute" command="~/.local/share/zen/zen"/>
    </keybind>
    <keybind key="W-F1">
      <action name="Execute" command="~/.config/scripts/Labcmd.sh"/>
    </keybind>
    <keybind key="W-F11">
      <action name="Execute" command="~/.config/scripts/LabwcTheme.sh"/>
    </keybind>
    <keybind key="W-F12">
      <action name="Execute" command="~/.config/scripts/WpSel.sh"/>
    </keybind>
    <keybind key="print">
      <action name="Execute" command="~/.config/scripts/ScreenShot.sh --in5"/>
    </keybind>
    <keybind key="C-print">
      <action name="Execute" command="~/.config/scripts/ScreenShot.sh --area"/>
    </keybind>
    <keybind key="C-A-Delete">
      <action name="Execute" command="/usr/bin/wlogout"/>
    </keybind>
    <keybind key="W-KP_Up">
      <action name="Execute" command="pulsemixer --change-volume +1"/>
    </keybind>
    <keybind key="W-KP_Down">
      <action name="Execute" command="pulsemixer --change-volume -1"/>
    </keybind>
    <keybind key="W-'">
      <action name="Execute" command="~/bin/labk.sh"/>
    </keybind>
    <keybind key="C-Escape">
      <action name="Execute" command="foot -T htop htop"/>
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None"/>
    </keybind>
    <!-- Window management -->
    <keybind key="W-space">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="W-Next">
      <action name="Iconify"/>
    </keybind>
    <keybind key="W-End">
      <action name="ToggleSnapToRegion" region="center"/>
    </keybind>
    <keybind key="A-k">
      <action name="MoveToEdge" direction="up"/>
    </keybind>
    <keybind key="A-h">
      <action name="MoveToEdge" direction="left"/>
    </keybind>
    <keybind key="A-l">
      <action name="MoveToEdge" direction="right"/>
    </keybind>
    <keybind key="A-j">
      <action name="MoveToEdge" direction="down"/>
    </keybind>
    <keybind key="S-C-Up">
      <action name="MoveTo" x="0" y="0"/>
    </keybind>
    <keybind key="S-C-Left">
      <action name="MoveTo" x="0" y="384"/>
    </keybind>
    <keybind key="S-C-Right">
      <action name="MoveTo" x="683" y="0"/>
    </keybind>
    <keybind key="S-C-Down">
      <action name="MoveTo" x="683" y="384"/>
    </keybind>
    <keybind key="W-Home">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="W-Up">
      <action name="ToggleSnapToEdge" direction="up"/>
    </keybind>
    <keybind key="W-Left">
      <action name="ToggleSnapToEdge" direction="left"/>
    </keybind>
    <keybind key="W-Right">
      <action name="ToggleSnapToEdge" direction="right"/>
    </keybind>
    <keybind key="W-Down">
      <action name="ToggleSnapToEdge" direction="down"/>
    </keybind>
    <keybind key="A-F2">
      <action name="Execute" command="~/bin/wofi-light.sh"/>
    </keybind>
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="A-F5">
      <action name="Execute" command="anyrun"/>
    </keybind>
    <keybind key="A-F9">
      <action name="Execute" command="~/bin/wofiradion.sh"/>
    </keybind>
    <!-- Resize active window -->
    <keybind key="W-S-r">
      <action name="Resize"/>
    </keybind>
    <!-- Snap to regions -->
    <keybind key="W-KP_Home">
      <action name="SnapToRegion" region="top-left"/>
    </keybind>
    <keybind key="W-KP_Prior">
      <action name="SnapToRegion" region="top-right"/>
    </keybind>
    <keybind key="W-KP_Left">
      <action name="SnapToRegion" region="left"/>
    </keybind>
    <keybind key="W-KP_Begin">
      <action name="SnapToRegion" region="center"/>
    </keybind>
    <keybind key="W-KP_Right">
      <action name="SnapToRegion" region="right"/>
    </keybind>
    <keybind key="W-KP_End">
      <action name="SnapToRegion" region="bottom-left"/>
    </keybind>
    <keybind key="W-KP_Next">
      <action name="SnapToRegion" region="bottom-right"/>
    </keybind>
    <keybind key="C-A-left">
      <action name="GoToDesktop" to="1"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 1"/>
    </keybind>
    <keybind key="C-A-right">
      <action name="GoToDesktop" to="2"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 2"/>
    </keybind>
    <keybind key="C-A-up">
      <action name="GoToDesktop" to="3"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 3"/>
    </keybind>
    <keybind key="C-A-down">
      <action name="GoToDesktop" to="4"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 4"/>
    </keybind>
    <keybind key="W-S-left">
      <action name="SendToDesktop" to="1"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 1"/>
    </keybind>
    <keybind key="W-S-right">
      <action name="SendToDesktop" to="2"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 2"/>
    </keybind>
    <keybind key="W-S-up">
      <action name="SendToDesktop" to="3"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 3"/>
    </keybind>
    <keybind key="W-S-down">
      <action name="SendToDesktop" to="4"/>
      <action name="Execute" command="~/.config/scripts/wstmp.sh 4"/>
    </keybind>
    <keybind key="Menu">
      <action name="ShowMenu" menu="root-menu"/>
    </keybind>
    <keybind key="W-S-x">
      <action name="ToggleDecorations"/>
    </keybind>
    <keybind key="W-S-f">
      <action name="ToggleFullscreen"/>
    </keybind>
    <keybind key="W-S-d">
      <action name="Execute" command="~/.config/scripts/ShowDesk.sh"/>
    </keybind>
    <keybind key="Scroll_Lock">
      <action name="Execute" command="~/.config/scripts/LockScreen.sh"/>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu"/>
      </mousebind>
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
      </mousebind>
    </context>
  </mouse>
  <libinput>
    <device>
      <naturalScroll>no</naturalScroll>
      <disableWhileTyping>yes</disableWhileTyping>
    </device>
  </libinput>
  <windowRules>
    <windowRule identifier="imv" serverDecoration="yes"/>
    <windowRule identifier="swayimg" serverDecoration="yes"/>
  </windowRules>
</labwc_config>
